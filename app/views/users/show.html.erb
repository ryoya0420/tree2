<div class="user-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 user-new-container">
        <h1>マイページ</h1>
        <p>氏名</p>
        <h2><%= @user.name %></h2><br>
        <p>メールアドレス</p>
        <h2><%= @user.email %></h2>
        <%= link_to "編集", edit_user_path(@user.id) %><br>
        <% if @user.id == current_user.id %>
          <%= link_to '削除', user_path(@user.id) ,method: :delete %><br>
        <% end %>
        <%= link_to "商品登録ページ", new_product_path %>
      </div> 
    </div>
  </div>
</div>